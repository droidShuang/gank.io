<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_view_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_dark_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.walker.gank.activity.ImageViewPagerActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:gravity="center">

        <TextView

            android:id="@+id/image_tx_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="2/9"
            android:textColor="@color/md_white_1000" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout">

        <android.support.v4.view.ViewPager
            android:id="@+id/image_vp_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>
